<?xml version="1.0"?>
<compiz>
	<plugin name="atlantis" useBcop="true">
		<_short>Cube Atlantis</_short>
		<_long>Render some fish inside of the transparent cube</_long>
		<category>Effects</category>
		<deps>
		<relation type="after">
			<plugin>cube</plugin>
		</relation>
		<requirement>
			<plugin>cube</plugin>
		</requirement>
		</deps>
		<screen>
			<option name="num_fish" type="int">
				<_short>Number of fish</_short>
				<_long>Number of fish inside the cube</_long>
				<default>20</default>
				<min>5</min>
				<max>100</max>
			</option>
			<option name="colors" type="bool">
				<_short>Colors</_short>
				<_long>Enable colors</_long>
				<default>true</default>
			</option>
			<option name="fish_size" type="int">
				<_short>Fish size</_short>
				<_long>Fish size</_long>
				<default>1500</default>
				<min>100</min>
				<max>10000</max>
			</option>
			<option name="shark_size" type="int">
				<_short>Shark size</_short>
				<_long>Shark size</_long>
				<default>5000</default>
				<min>100</min>
				<max>10000</max>
			</option>
			<option name="dolphin_size" type="int">
				<_short>Dolphin size</_short>
				<_long>Dolphin size.</_long>
				<default>5000</default>
				<min>100</min>
				<max>10000</max>
			</option>
			<option name="whale_size" type="int">
				<_short>Whale size</_short>
				<_long>Whale size.</_long>
				<default>8000</default>
				<min>100</min>
				<max>10000</max>
			</option>
		</screen>
	</plugin>
</compiz>
